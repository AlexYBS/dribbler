<style>
  .delete  {  width: 100%;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: #A79277;
        border-radius: 7px;
        outline: none;
        color: #ffffff;
        border: 1px solid #e5e5e5;
        filter: drop-shadow(0px 1px 0px #efefef) drop-shadow(0px 1px 0.5px rgba(239, 239, 239, 0.5));
        cursor: pointer;
        }

        .edit{
              height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: #A79277;
        border-radius: 7px;
        outline: none;
        color: #ffffff;
        border: 1px solid #e5e5e5;
        filter: drop-shadow(0px 1px 0px #efefef) drop-shadow(0px 1px 0.5px rgba(239, 239, 239, 0.5));
        cursor: pointer;
        }
</style>

<%-include("../partials/header.ejs") %>
<form action="/edit",method="post">
    <button class="edit" type="post">edit </button>
</form>

<h1 class="postTitle">
    <%= titlePost %>
</h1>

<h2 class="authorName">
    Created by 
    <%= name %>
    <% if(month<10){%>
<%= day + ".0" + month +"." + thisYear %>
   <% } else { %>
<%= curentDate %>
   <% } %>

   <% if(minute<10){%>
    <%= hour +":0" +minute %>
<% } else {%>
    <%= curentTime %>
<%}%>
    
</h2>

<p class="postContent">
    <%= content %>
</p>

<form action="/delete-post" method="get">
    <button  class="delete" type="submit">
        delete your post
    </button>
</form>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<script src="/script.js"></script>
</body>

</html>
